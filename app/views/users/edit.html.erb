<h2>User info</h2>

<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <% @user.errors.full_messages.each do |message| %>
  <%= message %>
  <% end %>
<% end %>



<%= form_with model:@user, local:true do |f| %>

  <div><label for="inputName">Name</label></div>

  <div><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></div>

  <div><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></div>

  <div><label for="inputImage">Image</label></div>

  <div><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></div>

  <div><label for="inputName">introduction</label></div>

  <div><%= f.text_field :introduction, id:"inputName", placeholder:"自己紹介"%></div>

  <div><%= f.submit "Update User" %></div>

<% end %>