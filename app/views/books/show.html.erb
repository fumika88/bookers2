

<div class="container">
<div class="row">
<div class="col-md-3">

<%= render 'users/list', user: @user, new_book: @new_book %>

</div>

<div class="col-md-8 offset-md-1">

<h2>Book detail</h2>
<table class="table table-striped">
<thead>
<tr>
<th>
  <%= link_to user_path(@user.id) do %>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <%= @book.user.name %>
  <% end %>
</th>
<th><%= link_to @book.title, book_path(@book.id) %></th>
<th><%= @book.body %></th>
<% if @user.id == current_user.id %>
<th><%= link_to "Edit", edit_book_path(@book.id) %></th>
<th><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></th>
<% end %>
</tr>
</thead>
</table>

</div>
</div>
</div>

